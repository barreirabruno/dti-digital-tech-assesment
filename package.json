{
  "name": "dti_technical_assesment",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node dist/main",
    "dev": "npx ts-node-dev --respawn --transpile-only --clear --inspect=0.0.0.0:9229 src/main",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc -p tsconfig-build.json",
    "test": "jest --passWithNoTests --no-cache --runInBand",
    "test:watch": "npm t -- --watch",
    "test:staged": "npm test -- --findRelatedTests"
  },
  "keywords": [
    "javascript",
    "typescript",
    "nodejs",
    "jest"
  ],
  "author": "Bruno Barreira",
  "license": "ISC",
  "description": "Backend api for DTI digital technical assesment. Manage photo albums and users.",
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@stylistic/eslint-plugin-ts": "^2.12.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "git-commit-msg-linter": "^5.0.8",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.11",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0"
  },
  "dependencies": {
    "axios": "^1.7.9"
  }
}
